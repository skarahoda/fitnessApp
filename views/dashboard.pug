div.container
	div(style="margin-bottom: 10px;").row
		div.-header.col-sm-2.col-xs-12
			h3(style="margin-top: 10px; margin-bottom: 10px;") Activity
		div.col-sm-4.col.xs-12
		div.hidden.col-sm-6
			div.col-sm-6.col-xs-12
				div(style="margin-bottom: 7px; margin-top: 7px;").form-group
					div(id = "datePickerStart").input-group.date
						span(style="cursor:default").input-group-addon From:
						input(type="text").form-control
						span.input-group-addon
							span.fa.fa-calendar
			div.col-sm-6.col-xs-12
				div(style="margin-bottom: 7px; margin-top: 7px;").form-group
					div(id = "datePickerEnd").input-group.date
						span(style="cursor:default").input-group-addon To:
						input(type="text").form-control
						span.input-group-addon
							span.fa.fa-calendar
	div.row
		div.col-sm-6.col-xs-12
			div.col-xs-2
				i(style="color:#428bca").fa.fa-3x.fa-male
			div.col.xs-10
				h3(style="margin-top: 10px;")
					span(style="font-size=%95").text-primary 7485
					span(style="font-size=%95")  steps taken
					span(style="font-size=%95").text-primary  today
		div.col-sm-6.col-xs-12
			div(style="height: 30px;").progress
				div(role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"
				style="width:75%").progress-bar.progress-bar-striped.progress-bar-primary.active
					span(style="line-height: 29px;") %75 of goal 10.000

	div.row
		div.col-sm-6.col-xs-12
			div(style="padding-left: 10px;").col-xs-2
				i(style="color:#5cb85c").fa.fa-3x.fa-road
			div.col.xs-10
				h3(style="margin-top: 10px;")
					span(style="font-size=%95").text-success 3.35
					span(style="font-size=%95")  miles traveled
					span(style="font-size=%95").text-success  today
		div.col-sm-6.col-xs-12
			div(style="height: 30px;").progress
				div(role="progressbar" aria-valuenow="67" aria-valuemin="0" aria-valuemax="100"
				style="width:67%").progress-bar.progress-bar-striped.progress-bar-success.active
					span(style="line-height: 29px;") %67 of goal 5.000

	div.row
		div.col-sm-6.col-xs-12
			div.col-xs-2
				i(style="color:#d9534f").fa.fa-3x.fa-fire
			div.col.xs-10
				h3(style="margin-top: 10px;")
					span(style="font-size=%95").text-danger 2177
					span(style="font-size=%95")  calories burned
		div.col-sm-6.col-xs-12
			div(style="height: 30px;").progress
				div(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
				style="width:100%").progress-bar.progress-bar-striped.progress-bar-danger.active
					span(style="line-height: 29px;") %100 of goal 2.184
	div.-area-chart


